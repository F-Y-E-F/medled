<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.WelcomeFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="medkit"
        android:padding="30dp"
        android:src="@drawable/doctor_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:lineSpacingMultiplier="0.9"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Be In Control of your meds"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_regular"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:text="An easy-to-use and reliable app
than helps you remember to take
 your meds at the right time."
            android:textAlignment="center"
            android:textColor="@color/lightGray"
            android:textSize="16sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/rounded10_bg"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/open_sans_bold"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:text="Get Started now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>